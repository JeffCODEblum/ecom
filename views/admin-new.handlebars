<div id="url-div" style="display: none;" data-url="{{url}}"></div>
<div class="container" style="max-width: 600px; background-color: #fff; color: #333;">
    <div style="margin-top: 10px; font-weight: bold; font-size: 1.4em;">Create Item</div>
    <div class="form-group">
        <label>Title</label>
        <input id="title-input" type="text" class="form-control" style="border-radius: 0px;" />
    </div>

    <div class="form-group">
        <label>Original Price</label>
        <input id="original-price-input" type="number" class="form-control" style="border-radius: 0px;" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input id="price-input" type="number" class="form-control" style="border-radius: 0px;" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea rows="8" id="description-input" type="text" class="form-control" style="border-radius: 0px;"></textarea>
    </div>

    <div style="margin-bottom: 30px; display: flex; flex-direction: row; justify-content: flex-end; align-items: center;">
        <button id="cancel-btn" class="btn btn-default" style="width: 70px; border: solid 1px #333; border-radius: 0px;">Cancel</button>
        <button id="save-btn" class="btn btn-default" style="width: 70px; margin-left: 10px; border: solid 1px #333; border-radius: 0px; color: white; background-color: #333">Save</button>
    </div>
</div>
<script src="{{url}}/admin-new.js"></script>