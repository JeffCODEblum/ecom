<div id="url-div" style="display: none;" data-url="{{url}}"></div>
<div id="jumbo" style="width: 100%; height: 300px; display: flex; justify-content: center; align-items: center;">
    <!-- <h1 style="font-size: 4em; color: white;">Red Hills Rarities</h1> -->
    <div style="border-bottom: solid 2px #ccc; width: 600px; background-color: white; padding: 30px; display: flex; flex-direction: row; justify-content: center;">
        <h1>Generic Blog</h1>
    </div>
</div>

<div id="nav" style="background-color: #fff; border-bottom: solid 2px #ccc; width: 100%; height: 60px; display: flex; justify-content: flex-start; align-items: center; flex-direction: row;">
    <div class="nav-link">
        <a href="#">Home</a>
    </div>
</div>

<div style="background-color: #efefefef; display: flex; flex-direction: column; justify-content: center; align-items: center; flex-wrap: wrap;">
    {{#each items}}
        <div style="border-bottom: solid 2px #ccc; padding: 20px; width: 600px; margin: 10px; background-color: #fff; display: flex; flex-direction: row; justify-content: flex-start; align-items: center;">
            <a href="{{../url}}/detail/{{this.id}}" style="width: 160px;">
                <img src="{{this.imageUrl}}" width="160px; height: 160px;">
            </a>

            <div style="margin-left: 10px;">
                <a href="{{../url}}/detail/{{this.id}}">
                    <h4>{{title}}</h4>
                </a>
                <p>{{description}} <a href="{{../url}}/detail/{{this.id}}">Read More</a></p>
                <div class="text-right">
                    {{timestamp}}
                </div>
            </div>
        </div>
    {{/each}}

    <div style="background-color: white; width: 600px; display: flex; flex-direction: row; justify-content: space-between; align-items: center;">
        <div style="padding: 10px;">
            {{#if showPrev}}
                <a href="{{prev}}">Newer</a>
             {{/if}}
        </div>
       
        <div style="padding: 10px;">
            <a href="{{to}}">Older</a>
        </div>
    </div>
</div>

<script src="{{url}}/index.js"></script>